}

.removeComparisonButton
{
	margin-left: auto;
	margin-right: 0px;
}

.comparisonBody
{
	flex-direction: row;
	background-color: rgba(80, 80, 80, 1); 
	border-width: 1px;
	border-color: rgba(40, 40, 40, 1);
	border-radius: 4px;
	overflow: hidden;
	margin-top: 2px;
	margin-bottom: 2px;
	padding: 4px;
}

.comparisonDropdown
{
	width: 33%;
	margin-left: 0px;
}

.comparisonToggle
